    <body>
        <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
            <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">Reforestando</a>
            <button
                class="navbar-toggler position-absolute d-md-none collapsed shadow-none border-none"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#sidebarMenu"
                aria-controls="sidebarMenu"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- <div class="w-100 bg-dark d-none d-md-block "></div> -->
            <div class="navbar-nav">
                <div class="nav-item text-nowrap d-none d-md-block">
                    <a class="nav-link px-3" href="/api/users/logout">Cerrar sesión</a>
                </div>
            </div>
        </header>

        <div class="container-fluid">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse shadow-none top-0 start-0">
                    <div class="position-sticky pt-3">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link " aria-current="page" href="/api/users"> Inicio </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/galeria"> Galeria </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/donaciones"> Donaciones </a>
                            </li>
                                <li class="nav-item">
                                <a class="nav-link " href="/api/users/perfil"> Perfil </a>
                            </li>
                            </li>
                                <li class="nav-item">
                                <a class="nav-link active" href="/api/events/all"> Eventos </a>
                            </li>

                            </li class="">
                                <li class="nav-item d-md-none">
                                <a class="nav-link" href="/api/users/logout"> Cerrar Sesion </a>
                            </li>
                           
                        </ul>
                    </div>
                </nav>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 row">

                <section class="section1  col-md-6">
                        <h2>Listado de todos los eventos pasados </h2>
                     
                        <% events.forEach(event => { %>
                            <h6>Evento: <%= event.NombreEvento %></h6>
                            <p>Descripción: <%= event.DescripcionEvento %></p>
                            <p>Fecha y Hora: <%= event.FechaHoraEvento %></p>
                            <p>Ubicación: <%= event.UbicacionEvento %></p>
                            <p>Asistentes:</p>
                            <% if (event.NombreUsuario && event.ApellidoUsuario) { %>
                                <p>Nombre: <%= event.NombreUsuario %></p>
                                <p>Apellido: <%= event.ApellidoUsuario %></p>
                                <p>Correo: <%= event.CorreoUsuario %></p>
                                <p>Cantidad de Arboles: <%= event.CantidadArboles %></p>
                            <% } else { %>
                                <p>No hay asistentes para este evento.</p>
                            <% } %>
                        <% }) %>
                        
                      
                </section>

                  <section class="section2 col-md-6">
                   <!-- registro.ejs -->
                    <h3 class="mt-2 text-center">Registrarse en un proximo evento</h3>
                    <form  class="d-flex flex-column col-5 mx-auto" id="FormEvent">
                    <label for="evento">Selecciona un evento:</label>
                    <select id="evento" name="evento" required>
                        <% eventsform.forEach(evento => { %>
                        <option value="<%= evento.EventoID %>"><%= evento.Nombre %></option>
                        <% }) %>
                    </select><br>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="cantidadArboles">cantidadArboles</label>
                            <input type="number" id="cantidadArboles" name="cantidadArboles" class="form-control" />
                        </div>

                    <button class="btn btn-primary " type="submit">Registrarse en el evento</button>
                    </form>

                </section>
                   
                </main>

              

            </div>
        </div>

        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
